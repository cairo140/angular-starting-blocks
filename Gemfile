source 'https://rubygems.org'

gem 'rails', '4.0.0.beta1'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 4.0.0.beta1'
  gem 'coffee-rails', '~> 4.0.0.beta1'
  gem 'uglifier', '>= 1.0.3'
  gem 'jquery-rails'
  gem 'angularjs-rails'
  gem 'zurb-foundation'
  gem 'haml-rails'
end

group :deployment do
  gem 'capistrano'
end
